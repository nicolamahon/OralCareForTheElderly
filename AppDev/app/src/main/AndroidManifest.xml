        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:label="Oral Care"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MenuOptions"
            android:label="Main Menu" />
        <activity
            android:name=".information"
            android:label="Useful Information"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".login_register"
            android:label="Login"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".self_care"
            android:label="Self Care Menu"
            android:parentActivityName=".MenuOptions" />
        <activity
            android:name=".patient_care"
            android:label="Patient Care Menu"
            android:parentActivityName=".MenuOptions" />

        <activity
            android:name=".NaturalTeeth"
            android:label="@string/title_activity_natural_teeth"
