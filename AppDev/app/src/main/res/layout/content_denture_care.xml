<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projects.nicola.oralcarefortheelderly.DentureCare"
    tools:showIn="@layout/activity_denture_care"
    android:id="@+id/header"
    android:background="@drawable/header"
    android:paddingBottom="5dip"
    android:paddingTop="5dip">

    <!-- android:gravity="center" -->


    <Button
        android:id="@+id/goToHygiene"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="78dp"
        android:text="Denture Hygiene"
        android:onClick="gotoHygiene"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/goToCareForDenture"
        android:layout_alignStart="@+id/goToCareForDenture" />

    <Button
        android:id="@+id/goToCareForDenture"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:text="Care for Dentures"
        android:onClick="gotoCareForDent"
        android:layout_below="@+id/goToHygiene"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
