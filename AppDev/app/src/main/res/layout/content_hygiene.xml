<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.projects.nicola.oralcarefortheelderly.Hygiene"
        tools:showIn="@layout/activity_hygiene"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hygieneHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hygieneHead"
            android:textSize="30sp"
            android:textAlignment="center"
            android:padding="@dimen/fab_margin"/>

        <TextView
            android:id="@+id/hygieneInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hygieneInfo"
            android:textAlignment="center"
            android:padding="@dimen/fab_margin"
            android:textSize="24sp" />

    </LinearLayout>
</ScrollView>