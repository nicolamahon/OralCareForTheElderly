<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header"
    android:padding="60dp"
    >

    <Button
        android:id="@+id/goToCavities"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:onClick="gotoCavity"
        android:text="@string/cavities"
        android:textSize="30sp" />

    <Button
        android:id="@+id/goToPlaque"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="21dp"
        android:text="@string/plaque"
        android:onClick="gotoPlaque"
        android:textSize="30sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/goToGumDisease"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="21dp"
        android:text="@string/gum_disease"
        android:onClick="gotoGumDis"
        android:textSize="30sp"
    android:layout_gravity="center"/>

</LinearLayout>
