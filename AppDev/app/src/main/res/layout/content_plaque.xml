<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.projects.nicola.oralcarefortheelderly.Plaque"
    tools:showIn="@layout/activity_plaque">

    <TextView
        android:id="@+id/plaqueTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="@string/plaque_title"
        android:textSize="36sp" />

    <ImageView
        android:id="@+id/plaqueIMG"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/plaque_14"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/plaqueTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:text="@string/plaqueInfo1"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:text="@string/plaqueInfo2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="280dp"
        android:layout_height="85dp"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="@string/plaqueInfo3" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:contentDescription="plaqueImage"
        android:text="@string/plaqueInfo4" />

</RelativeLayout>
