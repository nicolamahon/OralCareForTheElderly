<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dip"
        android:orientation="vertical"
        android:layout_gravity="top|center"
        tools:context="com.projects.nicola.oralcarefortheelderly.DryMouth"
        tools:showIn="@layout/activity_dry_mouth">


        <TextView
            android:id="@+id/dryMouthHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp"
            android:text="@string/dryMouthHead" />

        <TextView
            android:id="@+id/dryMouthInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:textSize="24sp"
            android:padding="@dimen/fab_margin"
            android:text="@string/dryMouthInfo"/>


        <Button
            android:id="@+id/button"
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:layout_gravity="bottom|end"
            android:text="Remedies"
            android:textSize="15sp"
            android:layout_marginRight="29dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="21dp"
            android:onClick="gotoDryRemedies"/>

    </LinearLayout>
    </ScrollView>