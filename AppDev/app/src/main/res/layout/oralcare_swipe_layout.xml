<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dip"
        android:layout_gravity="top|center">


        <TextView
            android:id="@+id/oralcareHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="oralcareHead"
            android:textStyle="bold"
            android:layout_below="@+id/image_count_oralcare"
            android:layout_marginTop="30dp" />


        <TextView
            android:id="@+id/oralcareInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="oralcareInfo"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/image_count_oralcare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/image_count"
            android:layout_marginTop="10dp"
            android:layout_gravity="top|center"/>



    </LinearLayout>
</ScrollView>