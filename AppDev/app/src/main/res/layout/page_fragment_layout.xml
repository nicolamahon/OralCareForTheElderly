<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projects.nicola.oralcarefortheelderly.PageFragment">


    <ImageView
        android:id="@+id/oralBalanceIMG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        app:srcCompat="@drawable/oralbalance_13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/oralBalanceInfo"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="@string/oralBalanceData"
        android:layout_below="@+id/oralBalanceIMG"
        android:layout_centerHorizontal="true" />

